<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="1920.0" prefHeight="1080.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sistemaerp.ui.ControllerCadastro"
            style="-fx-background-color: #f4f6f9;">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="20"
              prefWidth="260"
              style="-fx-background-color: #1e272e; -fx-padding: 30;">

            <Label text="ERP SYSTEM"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button text="Estoque"
                    onAction="#switchMain"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Vistas Explodidas"
                    onAction="#switchVistas"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Cadastrar Produtos"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Movimentação de Estoque"
                    onAction="#switchMovimentacao"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

        </VBox>
    </left>

    <!-- TOP HEADER -->
    <top>
        <HBox spacing="30"
              alignment="CENTER_LEFT"
              style="-fx-padding: 25; -fx-background-color: white;">

            <Label text="Cadastrar Produtos">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

        </HBox>
    </top>

    <!-- CENTER FORM -->
    <center>
        <VBox alignment="TOP_LEFT"
              spacing="30"
              style="-fx-padding: 50;">

            <GridPane hgap="25" vgap="20">

                <Label text="Descrição:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="descricao"
                           promptText="Descrição..."
                           prefWidth="300"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Código:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="codigo"
                           promptText="Código..."
                           prefWidth="200"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Equipamento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="equipamento"
                           promptText="Equipamento..."
                           prefWidth="250"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Categoria:"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="0"/>

                <ChoiceBox GridPane.rowIndex="3"
                           GridPane.columnIndex="1"
                           prefWidth="200"/>

            </GridPane>

            <Button fx:id="pesquisar"
                    text="Cadastrar"
                    onAction="#takeText"
                    prefHeight="50"
                    prefWidth="220"
                    style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>

        </VBox>
    </center>

</BorderPane>