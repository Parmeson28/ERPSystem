<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="1920.0" prefHeight="1080.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sistemaerp.ui.ControllerMovimentacao"
            style="-fx-background-color: #f4f6f9;">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="20"
              prefWidth="260"
              style="-fx-background-color: #1e272e; -fx-padding: 30;">

            <Label text="ERP SYSTEM"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button text="Estoque"
                    onAction="#switchMain"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Vistas Explodidas"
                    onAction="#switchVistas"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Cadastrar Produtos"
                    onAction="#switchCadastro"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

            <Button text="Movimentação de Estoque"
                    maxWidth="Infinity"
                    prefHeight="50"
                    styleClass="sidebar-button"/>

        </VBox>
    </left>

    <!-- TOP BAR -->
    <top>
    <HBox spacing="30"
          alignment="CENTER_LEFT"
          style="-fx-padding: 25; -fx-background-color: white;">

        <Label text="Movimentação de Estoque">
            <font>
                <Font name="System Bold" size="26"/>
            </font>
        </Label>

        <!-- Search Section -->
        <HBox spacing="15" alignment="CENTER_LEFT">

            <TextField fx:id="descricao"
                       promptText="Descrição..."
                       prefWidth="250"/>

            <TextField fx:id="codigo"
                       promptText="Código..."
                       prefWidth="160"/>

            <Button fx:id="pesquisar"
                    text="Pesquisar"
                    onAction="#searchItem"
                    prefHeight="40"
                    prefWidth="120"
                    style="-fx-background-color: #0984e3; -fx-text-fill: white; -fx-font-weight: bold;"/>

        </HBox>

    </HBox>
</top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="25"
              style="-fx-padding: 40;">

            <Label fx:id="itemName"
                   text="Item..."
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="20" vgap="20">

                <Label text="Estoque Atual:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="estoqueAtual"
                           promptText="Estoque atual..."
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           prefWidth="200"/>

                <Label text="Novo Estoque:"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="novoEstoque"
                           promptText="Novo estoque..."
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           prefWidth="200"/>

                <Button fx:id="alterar"
                        text="Alterar"
                        onAction="#alterQuantity"
                        GridPane.rowIndex="2"
                        GridPane.columnIndex="1"
                        prefHeight="45"
                        prefWidth="200"
                        style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-weight: bold;"/>

            </GridPane>

        </VBox>
    </center>

</BorderPane>